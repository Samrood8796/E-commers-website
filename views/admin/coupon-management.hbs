<div class="container-fluid">
    <div class="row px-xl-5 pt-5">
        <div class=" table-responsive mb-5">
            <div class="justify-content-end d-flex mb-3">
                <a class="btn btn-info" href="/admin/add-coupon">Add Coupon</a>
            </div>
            {{#if coupExistErr}}
            <p class="error text-danger">{{coupExistErr}}</p>
            {{/if}}
            {{!-- <table class="table table-light table-borderless table-hover text-center mb-3"> --}}
                <table class="table text-center">
                    <thead class="thead-light">
                        <tr>
                            <th>No</th>
                            <th>Coupon</th>
                            <th>Starting Date</th>
                            <th>Expire Date</th>
                            <th>offer(%)</th>
                            <th>Edit</th>
                            <th>Delete</th>

                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        {{#each coupons}}
                        <tr>
                            <td class="align-middle">{{inc @index}}</td>
                            <td class="align-middle">{{this.coupon}}</td>
                            <td class="align-middle">{{this.starting}}</td>
                            <td class="align-middle">{{this.expiry}}</td>
                            <td class="align-middle">{{this.offer}}</td>
                            <td class="align-middle icon-red"><a href="/admin/edit-coupon/{{this._id}}"><i
                                        class="fa fa-edit fa-2x text-dark" ></i></a></td>
                            <td class="align-middle"><a onclick="return confirm('delete {{this.coupon}} coupon')"
                                    href="/admin/delete-coupon/{{this._id}}"><i class="fa fa-trash-o fa-2x text-dark"
                                        ></i></a></td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
        </div>
    </div>
</div>

